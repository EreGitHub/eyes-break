{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "eyes-break",
  "version": "0.0.0-RC5",
  "identifier": "com.eyes-break.app",
  "build": {
    "frontendDist": "../dist/eyes-break/browser",
    "devUrl": "http://localhost:4200",
    "beforeDevCommand": "bun run start",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Eyes Break",
        "width": 700,
        "height": 500,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "focus": false,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
